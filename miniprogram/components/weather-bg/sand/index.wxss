.container {
  width: 100%;
  height: 100%;
}

.sand-bg {
  --var-sand-color-0: rgba(61, 46, 31, 0.6);
  --var-sand-color-1: rgba(61, 46, 31, 0.5);
  --var-sand-color-2: rgba(61, 46, 31, 0.4);
  --var-sand-color-3: rgba(61, 46, 31, 0.3);
  --var-sand-color-4: rgba(61, 46, 31, 0.2);
  --var-sand-color-5: rgba(61, 46, 31, 0.1);

  background: linear-gradient(
    to top right,
    rgb(207, 156, 104) 0%,
    rgb(184, 138, 95) 100%
  );
}

.sand {
  position: relative;
  width: 100%;
  height: 100%;
}

.sand-fly {
  position: absolute;
  border-radius: 50%;
  transform: translateX(-100%);
  animation: 2s linear infinite;
}


@keyframes fly-0 {
  0% {
    left: 0;
  }

  100% {
    left: 100%;
    top: 10%;
  }
}

@keyframes fly-1 {
  0% {
    left: 0;
  }

  100% {
    left: 100%;
    top: 20%;
  }
}

@keyframes fly-2 {
  0% {
    left: 0;
  }

  100% {
    left: 100%;
    top: 30%;
  }
}

@keyframes fly-3 {
  0% {
    left: 0;
  }

  100% {
    left: 100%;
    top: 40%;
  }
}

@keyframes fly-4 {
  0% {
    left: 0;
  }

  100% {
    left: 100%;
    top: 50%;
  }
}
