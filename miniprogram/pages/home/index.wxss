/* 背景图 */
.weather-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
}

/* 可滚动视图 */
.weather-container {
  position: relative;
  font-family: 'consolas';
  box-sizing: border-box;
  height: 100vh;
  width: 100vw;
  z-index: 2;
}

/* 天气简报 */
.weather-brief-info {
  color: #fff;
  padding: 0.5em 1em;
}

@keyframes rise {
  0% {
    transform: translateY(10px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.rise-animation {
  animation: rise 0.5s ease-in-out;
  animation-fill-mode: forwards;
}

/* 温度 */
.temperature {
  font-size: 5em;
  opacity: 0;
}

/* 体感温度 */
.weather-condition {
  opacity: 0;
  animation-delay: 0.2s;
}

/* AQI 导航 */
.weather-aqi {
  opacity: 0;
  animation: rise 0.5s ease-in-out;
  animation-fill-mode: forwards;
  animation-delay: 0.3s;
}

/* 详细数据面板 */
.detail-data {
  opacity: 0;
  animation: rise 0.5s ease-in-out;
  animation-fill-mode: forwards;
  animation-delay: 0.4s;
}

.title {
  margin-bottom: 0.8em;
  font-weight: bold;
}

/* 小时概述和逐日概述 */
.hours,
.days {
  display: flex;
}

/* 天气详情页 */
.weather-detail-content {
  background-color: #f4f8f9;
  padding: 0.5em 1em;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.alert {
  opacity: 0;
  animation: rise 0.5s ease-in-out;
  animation-fill-mode: forwards;
  animation-delay: 0.5s;
}

.card-1,
.card-2,
.card-3,
.card-4 {
  opacity: 0;
  animation: rise 0.5s ease-in-out;
  animation-fill-mode: forwards;
}

.card-1 {
  animation-delay: 0.6s;
}

.card-2 {
  animation-delay: 0.7s;
}

.card-3 {
  animation-delay: 0.8s;
}

.card-4 {
  animation-delay: 0.9s;
}

/* 两小时降水图 */
.precip-summary {
  border-radius: 5px;
  padding: 0.5em;
  background-color: #f4f5f5;
  margin-top: 0.5em;
}

.hours-item,
.days-item {
  display: flex;
  min-width: 60px;
  align-items: center;
  flex-direction: column;
  padding: 0.2em 0;
}

.days-time {
  margin: 0.5em 0;
  color: #909399;
}

.hours-icon {
  margin: 1em 0;
}

.hours-temp {
  margin-bottom: 0.5em;
}

/* 风况 */
.hours-wind {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.wind-icon {
  margin: 0.5em 0;
}


/* 日月生落 */
.title-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 加载动画 */
.loading {
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}
